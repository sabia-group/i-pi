<simulation verbosity='high'>
  <output prefix='simulation'>
    <properties stride='1' filename='out'>  [ time{picosecond}, conserved, temperature{kelvin}, kinetic_md, kinetic_cv, potential ] </properties>
    <trajectory filename='pos1' format='xyz' stride='10' bead='0'> positions{angstrom} </trajectory>
    <trajectory filename='pos2' format='xyz' stride='10' bead='8'> positions{angstrom} </trajectory>
    <trajectory filename='pos3' format='xyz' stride='10' bead='16'> positions{angstrom} </trajectory>
    <trajectory filename='pos4' format='xyz' stride='10' bead='32'> positions{angstrom} </trajectory>
    <trajectory filename='xc' format='xyz' stride='10' > x_centroid{angstrom} </trajectory>
    <trajectory filename='for' format='xyz' stride='100' bead='0'> forces </trajectory>
    <trajectory filename='kin' format='xyz' stride='100' bead='0'> kinetic_cv </trajectory>
  </output>
  <total_steps>100000</total_steps>
  <prng>
    <seed>23658</seed>
  </prng>
  <ffsocket mode='unix' pbc='false' name='driver'>
    <!--<address>localhost</address>   -->
    <address>driver</address>
  </ffsocket>
  <system>
    <initialize nbeads='128'>
      <file mode='xyz' units='angstrom'> eh.xyz </file>
      <cell mode='abc' > [ 30.0, 30.0, 30.0 ] </cell>
      <masses mode='manual'> [ 0.43, 0.53 ]  </masses>
      <!--     <gle mode='chk'> restart.chk </gle> -->
      <velocities mode='thermal' units='kelvin'> 300 </velocities>
    </initialize>
    <forces>
      <force forcefield='driver'/>
    </forces>
    <ensemble>
      <temperature units='kelvin'>300</temperature>
    </ensemble>
    <motion mode='dynamics'>
      <fixcom>True</fixcom>
      <dynamics mode='nvt'>
        <timestep units='femtosecond'>0.001</timestep>
        <thermostat mode='pile_l'>
          <tau units='femtosecond'> 0.01 </tau>
        </thermostat>
      </dynamics>
    </motion>
  </system>
</simulation>
