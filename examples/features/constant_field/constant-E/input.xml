<simulation verbosity='high'>

  <total_steps>100</total_steps>

  <ffdirect name='driver'>
    <pes> torch </pes>
    <parameters> {template:start.xyz,model_path:pswater_compiled.model,jit:true} </parameters>
  </ffdirect>

  <output prefix='i-pi'>
    <trajectory filename='forces'>forces</trajectory>
    <trajectory filename='positions' >positions{angstrom}</trajectory>
    <properties filename='properties.out' verbosity='low' > [ step, time, conserved, kinetic_md, potential ] </properties>
  </output>

  <prng>
    <seed>10545</seed>
  </prng>

  <system>
    <forces>
      <force forcefield='driver'/>
      <forcedielectric forcefield='driver' mode="E" dipole_units="eang">
        <dielectric_field units='ev/a'> [1, 2, 3 ]</dielectric_field>
      </forcedielectric>
    </forces>

    <initialize nbeads='1'>
      <file mode='xyz' units='atomic_unit' > start.xyz </file>                     
      <velocities mode='thermal' units='kelvin'> 0 </velocities>                   
      <cell mode="manual" units="atomic_unit">[ 100,0,0, 0,100,0, 0,0,100 ]</cell>    
    </initialize>

    <ensemble>
      <temperature units='kelvin'>0</temperature>
    </ensemble>

    <motion mode='dynamics' >
      <fixcom> True </fixcom>
      <dynamics mode='nve'>
        <timestep units='femtosecond'> 1 </timestep>
        <!-- <thermostat mode='svr'>
          <tau units='femtosecond'> 100 </tau>
        </thermostat> -->
      </dynamics>
    </motion>

  </system>
</simulation>
